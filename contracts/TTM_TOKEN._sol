pragma solidity ^0.8.0;

// Import the ERC20 contract from OpenZeppelin
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";

// Define the name, symbol, and initial supply of your token
string public constant name = "AAA Token";
string public constant symbol = "AAA";
uint256 public constant initialSupply = 1000000000000 * 10**18; // 1 billion tokens, 18 decimals

// Inherit from the ERC20 contract and define your AAA token contract
contract AAAToken is ERC20 {
    constructor() ERC20(name, symbol) {
        // Mint the initial supply to the deployer address
        _mint(msg.sender, initialSupply);
    }

    // You can add additional functions here based on your token's requirements

    // Example: Burn tokens
    function burn(uint256 amount) public {
        _burn(msg.sender, amount);
    }
}